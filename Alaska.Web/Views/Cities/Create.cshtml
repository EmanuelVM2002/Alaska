@model Alaska.Web.Models.City

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/Font-awesome/css/fontawesome.css"/>
    <link rel="stylesheet" href="~/lib/Font-Awesome/css/regular.min.css">
    <link rel="stylesheet" href="~/lib/Font-Awesome/css/solid.min.css">

</head>
<body background="http://www.defondos.com/images/wallpapers/fondo%20azul%20mar%20blue%20wallpaper%20(46)-829110_800.jpeg">
    <div class="row">
        <div class="col-md-4 col-md-offset-7" align="center">
            <div>
                <h1 class="text-center font-weight-bold">Crear Nueva Ciudad</h1>
            </div>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <partial name="_City"/>
                <div class="form-group align-items-sm-center">
                    <input type="submit" value="Guardar" class="btn btn-primary font-weight-bold" />
                    <a class="btn btn-warning font-weight-bold" asp-action="Index"><i class="fa-solid fa-circle-arrow-left"></i> Regresar a Ciudades</a>
                </div>               
            </form>
        </div>
    </div>
</body>

